@model HMI.Models.Account 
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>Registration Page</h2><br />
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="col-form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserPassword" class="col-form-label"></label>
                        <input asp-for="UserPassword" class="form-control" type="password" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserType" class="col-form-label"></label>
                        @*<input asp-for="UserType" class="form-control" />*@
                        <br />
                        <input type="radio" name="UserType" value="0" />Administrator<br />
                        <input type="radio" name="UserType" value="1" />Operator

                        <span asp-validation-for="UserType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save User Details" class="btn btn-primary" />
                    </div>
                </form>
        </div>
    </div>
    <div>
        <a asp-action="Login" class="btn btn-secondary">Back to Login Page</a>
    </div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    } 
</div>